{
  "name": "trezor-connect",
  "version": "2.0.0",
  "author": "TREZOR <info@trezor.io>",
  "homepage": "https://github.com/trezor/connect",
  "description": "High-level javascript interface for TREZOR hardware wallet.",
  "license": "LGPL-3.0+",
  "repository": {
    "type": "git",
    "url": "git://github.com/trezor/connect.git"
  },
  "bugs": {
    "url": "https://github.com/trezor/connect/issues"
  },
  "keywords": [
    "trezor",
    "javascript"
  ],
  "main": "lib/index-browser.js",
  "scripts": {
    "dev": "babel-node ./webpack/server.js --config browser",
    "dev:lite": "babel-node ./webpack/server.js --config browser-lite",
    "dev:react": "babel-node --presets latest ./webpack/server.js --config react",
    "dev:node": "NODE_ENV=node babel-node --presets latest --plugins transform-class-properties ./examples/node/index.js",
    "dev:electron": "npm run electron-hot-server -- --electron-start-hot",
    "electron-hot-server": "cross-env NODE_ENV=development node --max_old_space_size=2096 -r babel-register ./webpack/server.js --config electron",
    "electron-start-hot": "cross-env HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill ./examples/electron/index",
    "clean": "rm -rf dist && mkdir dist",
    "build2": "npm run clean && npm run build",
    "build": "rm -rf dist && webpack --config ./webpack/webpack.config.prod.babel.js",
    "stats": "webpack --config ./webpack/webpack.config.prod.babel.js --json > dist/stats.json",
    "build:lib": "rm -rf lib && babel-node --presets env ./webpack/stylesheet.js --build && babel src --out-dir lib"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "chokidar": "^1.7.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "es6-promise": "^4.1.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "flow-bin": "^0.48.0",
    "flow-typed": "^2.1.2",
    "html-webpack-plugin": "^2.30.1",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "open": "^0.0.5",
    "style-loader": "^0.18.2",
    "trezor-link-node": "^0.2.105",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.5.0",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-merge": "^4.1.0",
    "webpack-module-hot-accept": "^1.0.5",
    "yargs": "^8.0.2"
  },
  "dependencies": {
    "bip44-constants": "^2.5.0",
    "bitcoinjs-lib-zcash": "^3.0.0",
    "file-loader": "^0.11.2",
    "hd-wallet": "https://github.com/szymonlesisz/hd-wallet-npm",
    "preact": "^8.2.1",
    "trezor-link": "^0.2.105",
    "window-or-global": "^1.0.1",
    "worker-loader": "^0.8.1"
  }
}
